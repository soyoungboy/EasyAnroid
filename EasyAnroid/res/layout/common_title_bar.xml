<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_btn_height"
    android:padding="0dp"
    android:background="@drawable/title_bg">

    <Button
        android:id="@+id/title_btn_left"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="@drawable/title_textcolor"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:textSize="18sp"
        android:background="@null"/>

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/title_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:padding="0dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="@drawable/title_textcolor"
        android:textSize="18sp"
        android:background="@null"/>

    <LinearLayout
        android:id="@+id/mid_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:background="@drawable/title_mid_view_bg">

        <Button
            style="@style/title_mid_leftbtn_style"
            android:id="@+id/left_btn"
            android:text="@string/group"/>

        <Button
            style="@style/title_mid_rightbtn_style"
            android:id="@+id/right_btn"
            android:text="@string/all"/>
    </LinearLayout>
</RelativeLayout>
